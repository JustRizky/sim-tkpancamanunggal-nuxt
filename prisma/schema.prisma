generator client {
        provider      = "prisma-client-js"
        binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
        // output   = "../app/generated/prisma"
}

datasource db {
        provider = "mysql"
        url      = env("DATABASE_URL")
}

model User {
        id        Int      @id @default(autoincrement())
        email     String   @unique
        password  String
        createdAt DateTime @default(now())
}

model HeroSection {
        id        Int      @id @default(1)
        title     String
        paragraph String
        imageUrl  String
        createdAt DateTime @default(now())
        updatedAt DateTime @updatedAt
}

model ProgramsSection {
        id          Int      @id @default(autoincrement())
        title       String
        description String   @db.Text
        imageUrl    String
        createdAt   DateTime @default(now())
        updatedAt   DateTime @updatedAt
}

model Carousel {
        id        Int      @id @default(autoincrement())
        imageUrl  String
        createdAt DateTime @default(now())
        updatedAt DateTime @updatedAt
}

model About {
        id        Int      @id @default(1)
        imageUrl  String
        sejarah   String   @db.Text
        visi      String   @db.Text
        misi      String   @db.Text
        createdAt DateTime @default(now())
        updatedAt DateTime @updatedAt
}

model Teacher {
        id        Int      @id @default(autoincrement())
        imageUrl  String
        name      String
        role      String
        tugas     String   @db.Text
        createdAt DateTime @default(now())
        updatedAt DateTime @updatedAt
}

model Ppdb {
        id Int @id @default(autoincrement())

        nama            String
        jk              String
        nik             String
        no_kk           String
        tempat_lahir    String
        tgl_lahir       String
        no_akte         String
        agama           String
        kewarganegaraan String
        alamat          String
        tinggal_bersama String
        anak_ke         String
        usia            String
        no_hp           String

        namaAyah        String
        nikAyah         String
        tahunLahirAyah  String
        pendidikanAyah  String
        pekerjaanAyah   String
        penghasilanAyah String

        namaIbu        String
        nikIbu         String
        tahunLahirIbu  String
        pendidikanIbu  String
        pekerjaanIbu   String
        penghasilanIbu String

        tinggiBadan   String
        beratBadan    String
        lingkarKepala String
        jarakTempuh   String
        jumlahSaudara String
}
